
##Habilitar la reescritura 
RewriteEngine On

RewriteRule ^sitemap\.xml/?$ sitemap.php

# Redirige HTTP a HTTPS
# RewriteCond %{SERVER_PORT} 80
# RewriteRule ^(.*)$ https://hempleaf.ddns.net/$1 [R,L]

## Esconder extension .php 

# Redirigir /hempleaf/archivo.php a /hempleaf/archivo
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R,L]

# Reenviar internamente /hempleaf/archivo a /hempleaf/archivo.php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*?)/?$ $1.php [L]

ErrorDocument 404 /hempleaf/404
ErrorDocument 403 /hempleaf/403
ErrorDocument 500 /hempleaf/500

# START - Disable server signature #
ServerSignature Off
# END - Disable server signature #
